{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../../",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [ "src/**/*",
    "../../packages/shared/**/*"],
  "exclude": [ "node_modules",
    "src/stripe"]
}

